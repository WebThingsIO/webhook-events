{
  "author": "WebThingsIO",
  "content_scripts": [
    {
      "css": [
        "css/extension.css"
      ],
      "js": [
        "js/extension.js"
      ]
    }
  ],
  "description": "Webhook events add-on for WebThings Gateway",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "extension",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/WebThingsIO/webhook-events",
  "id": "webhook-events",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "Webhook Events",
  "options": {
    "default": {
      "hooks": []
    },
    "schema": {
      "type": "object",
      "properties": {
        "hooks": {
          "type": "array",
          "title": "Hooks",
          "description": "List of hooks to generate",
          "items": {
            "type": "object",
            "required": [
              "name"
            ],
            "properties": {
              "name": {
                "title": "Name",
                "description": "Unique name for this hook. The name will be used for the corresponding event and property.",
                "type": "string"
              },
              "id": {
                "title": "Unique ID",
                "description": "This will be generated for you.",
                "type": "string",
                "readOnly": true
              },
              "propertyKey": {
                "title": "Property Key",
                "description": "If a value is going to be parsed out of the hook data, this is the name of the property to parse.",
                "type": "string"
              },
              "propertyValueType": {
                "title": "Property Value Type",
                "description": "Type of data that is being parsed for the property.",
                "type": "string",
                "enum": [
                  "string",
                  "number",
                  "integer",
                  "boolean"
                ],
                "default": "string"
              }
            }
          }
        }
      }
    }
  },
  "short_name": "Webhook",
  "version": "0.3.0",
  "web_accessible_resources": [
    "css/*.css",
    "js/*.js",
    "views/*.html"
  ]
}
